<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="idCEAventura" class="pe.inverfin.spring.entity.parteI.CESantoGrialAventura"/>
	
	<bean id="idCECaballero" class="pe.inverfin.spring.entity.parteI.CECaballeroDeLaMesaRedonda">
		<!-- Utilizando el constructor -->
		<constructor-arg value="Esteban"></constructor-arg>
		
		<!-- Utilizando el set -->
		<property name="aventura" value="idCEAventura"></property>
	</bean>

</beans>
